{
  "extends": ["standard", "prettier"],
  "env": {
    "es2022": true,
    "node": true
  },
  "rules": {
    "no-console": "warn"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "standard-with-typescript",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "prettier"
      ],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ]
}
